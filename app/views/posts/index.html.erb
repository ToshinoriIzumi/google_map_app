<%= javascript_include_tag "config/const.js" %>
<%= javascript_include_tag "models/google_map_model.js" %>
<%= javascript_include_tag "controllers/google_map_controller.js" %>
<%= javascript_include_tag "views/google_map_view.js" %>
<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Lat</th>
      <th>Lng</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.lat %></td>
        <td><%= post.lng %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
<div id="display-none">
  <% @posts.each do |post| %>
    <div class="map-data" data-lat="<%= post.lat %>" data-lng="<%= post.lng %>" data-post_id="<%= post.id %>"><%= post.title %></div>
  <% end %>
</div>
<div id="map"></div>